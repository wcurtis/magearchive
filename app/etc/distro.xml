<config>
    <stores>
        <base>
            <system>
                <store>
                    <id>1</id>
                </store>

                <website>
                    <id>1</id>
                </website>

                <filesystem>
                    <base>{{root_dir}}</base>
                    <code>{{app_dir}}/code</code>
                    <design>{{app_dir}}/design</design>
                    <etc>{{app_dir}}/etc</etc>
                    <media>{{root_dir}}/media</media>
                    <upload>{{root_dir}}/media/upload</upload>
                    <skin>{{root_dir}}/skin</skin>
                    <var>{{var_dir}}</var>
                    <cache>{{var_dir}}/cache</cache>
                    <session>{{var_dir}}/session</session>
                </filesystem>
            </system>

            <web>
                <unsecure>
                    <protocol>{{protocol}}</protocol>
                    <host>{{host}}</host>
                    <port>{{port}}</port>
                    <base_path>{{base_path}}</base_path>
                </unsecure>

                <secure>
                    <protocol>{{secure_protocol}}</protocol>
                    <host>{{secure_host}}</host>
                    <port>{{secure_port}}</port>
                    <base_path>{{secure_base_path}}</base_path>
                </secure>

                <url>
                    <media>{{base_path}}media/</media>
                    <skin>{{base_path}}skin/</skin>
                    <js>{{base_path}}js/</js>
                    <use_script_name>1</use_script_name>
                </url>

                <default>
                    <front>catalog</front>
                    <no_route>core/index/noRoute</no_route>
                </default>
            </web>
        </base>
    </stores>
</config>
