<config>
    <modules>
        <Mage_SearchLucene>
            <version>0.7.0</version>
        </Mage_SearchLucene>
    </modules>
    <global>
		<helpers>
            <searchlucene>
                <class>Mage_SearchLucene_Helper</class>
            </searchlucene>
        </helpers> 
        <blocks>
            <searchlucene><class>Mage_SearchLucene_Block</class></searchlucene>
        </blocks>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_SearchLucene>
                    <files>
                        <default>Mage_SearchLucene.csv</default>
                    </files>
                </Mage_SearchLucene>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <searchlucene>
                <use>standard</use>
                <args>
                    <module>Mage_SearchLucene</module>
                    <frontName>searchlucene</frontName>
                </args>
            </searchlucene>
        </routers>
        <translate>
            <modules>
                <Mage_SearchLucene>
                    <files>
                        <default>Mage_SearchLucene.csv</default>
                    </files>
                </Mage_SearchLucene>
            </modules>
        </translate>
    </frontend>
</config>