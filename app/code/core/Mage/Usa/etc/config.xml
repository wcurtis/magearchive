<config>
    <modules>
        <Mage_Usa>
            <version>0.7.0</version>
            <depends>
                <Mage_Sales />
                <Mage_Shipping />
            </depends>
        </Mage_Usa>
    </modules>
    <global>
        <resources>
            <usa_setup>
                <setup>
                    <module>Mage_Usa</module>
                </setup>
                <connection>
                    <use>directory_setup</use>
                </connection>
            </usa_setup>
            <usa_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </usa_read>
        </resources>
        <models>
            <usa>
                <class>Mage_Usa_Model</class>
                <resourceModel>usa_mysql4</resourceModel>
            </usa>
            <usa_mysql4>
                <class>Mage_Usa_Model_Mysql4</class>
                <entities>
                    <postcode>
                        <table>usa_postcode</table>
                    </postcode>
                </entities>
            </usa_mysql4>
        </models>
        <sales>
            <shipping>
                <carriers>
                    <ups>
                        <class>Mage_Usa_Model_Shipping_Carrier_Ups</class>
                    </ups>
                    <usps>
                        <class>Mage_Usa_Model_Shipping_Carrier_Usps</class>
                    </usps>
                    <fedex>
                        <class>Mage_Usa_Model_Shipping_Carrier_Fedex</class>
                    </fedex>
                    <dhl>
                        <class>Mage_Usa_Model_Shipping_Carrier_Dhl</class>
                    </dhl>
                </carriers>
            </shipping>
            <tax>
                <methods>
                    <uszipcode>
                        <class>Mage_Usa_Model_Tax_Uszipcode</class>
                    </uszipcode>
                </methods>
            </tax>
        </sales>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Usa>
                    <files>
                        <default>Mage_Usa.csv</default>
                    </files>
                </Mage_Usa>
            </modules>
        </translate>
    </adminhtml>
    <frongend>
        <translate>
            <modules>
                <Mage_Usa>
                    <files>
                        <default>Mage_Usa.csv</default>
                    </files>
                </Mage_Usa>
            </modules>
        </translate>
    </frongend>
</config>
