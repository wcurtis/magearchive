<config>
    <modules>
        <Mage_Tag>
            <version>0.7.0</version>
            <depends>
                <Mage_Core />
            </depends>
        </Mage_Tag>
    </modules>
    <global>
        <models>
            <tag>
                <class>Mage_Tag_Model</class>
                <resourceModel>tag_mysql4</resourceModel>
            </tag>
            <tag_customer>
                <class>Mage_Tag_Model_Customer</class>
                <resourceModel>tag_entity_customer</resourceModel>
            </tag_customer>
            <tag_entity_customer>
                <class>Mage_Tag_Model_Entity_Customer</class>
                </tag_entity_customer>
            <tag_mysql4>
                <class>Mage_Tag_Model_Mysql4</class>
                <entities>
                    <tag>
                        <table>tag</table>
                    </tag>
                    <relation>
                        <table>tag_relation</table>
                    </relation>
                    <summary>
                        <table>tag_summary</table>
                    </summary>
                </entities>
            </tag_mysql4>
        </models>
        <resources>
            <tag_setup>
                <setup>
                    <module>Mage_Tag</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </tag_setup>
            <tag_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </tag_write>
            <tag_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </tag_read>
        </resources>
        <blocks>
            <tag><class>Mage_Tag_Block</class></tag>
        </blocks>
    </global>
    <frontend>
        <routers>
            <tag>
                <use>standard</use>
                <args>
                    <module>Mage_Tag</module>
                    <frontName>tag</frontName>
                </args>
            </tag>
        </routers>
        <translate>
            <modules>
                <Mage_Tag>
                    <files>
                        <default>Mage_Tag.csv</default>
                    </files>
                </Mage_Tag>
            </modules>
        </translate>
          <layout>
              <updates>
                  <tag>
                      <file>tag.xml</file>
                  </tag>
              </updates>
          </layout>
    </frontend>
    <adminhtml>
        <events>
            <catalog_controller_product_save_visibility_changed>
                <observers>
                    <tag>
                        <type>model</type>
                        <class>tag/tag</class>
                        <method>productEventAggregate</method>
                    </tag>
                </observers>
            </catalog_controller_product_save_visibility_changed>
            <catalog_controller_product_delete>
                <observers>
                    <tag>
                        <type>model</type>
                        <class>tag/tag</class>
                        <method>productEventAggregate</method>
                    </tag>
                </observers>
            </catalog_controller_product_delete>
        </events>
        <menu>
            <catalog>
                <children>
                    <tag translate="title" module="tag">
                        <title>Tags</title>
                        <children>
                            <pending translate="title" module="tag">
                                <title>Pending Tags</title>
                                <action>*/tag/pending</action>
                            </pending>
                            <all translate="title" module="tag">
                                <title>All Tags</title>
                                <action>*/tag/index</action>
                            </all>
                            <!--
                            <customer>
                                <title>Customers' Tags</title>
                                <action>*/tag/customer</action>
                            </customer>
                            <product>
                                <title>Products' Tags</title>
                                <action>*/tag/product</action>
                            </product>
                            -->
                        </children>
                    </tag>
                 </children>
            </catalog>
            <report>
                <children>
                     <tags translate="title" module="tag">
                        <title>Tags Report</title>
                        <children>
                            <customer translate="title" module="tag">
                                <title>Customers</title>
                                <action>*/report_tag/customer</action>
                            </customer>
                            <product translate="title" module="tag">
                                <title>Products</title>
                                <action>*/report_tag/product</action>
                            </product>
                            <!--<product_total>
                                <title>Products (Total)</title>
                                <action>*/report_tag/productAll</action>
                            </product_total>-->
                            <popular translate="title" module="tag">
                                <title>Popular</title>
                                <action>*/report_tag/popular</action>
                            </popular>
                        </children>
                    </tags>
                    </children>
            </report>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <report>
                            <children>
                                <tags>
                                    <title>Tags Report</title>
                                    <children>
                                        <customer>
                                            <title>Customers</title>
                                        </customer>
                                        <popular>
                                            <title>Popular</title>
                                        </popular>
                                        <product>
                                            <title>Products</title>
                                        </product>
                                        <product_total>
                                            <title>Products (Total)</title>
                                        </product_total>
                                    </children>
                                </tags>
                            </children>
                        </report>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <Mage_Tag>
                    <files>
                        <default>Mage_Tag.csv</default>
                    </files>
                </Mage_Tag>
            </modules>
        </translate>
    </adminhtml>
</config>
