                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default_value><![CDATA[Check / Money order]]></default_value>
                        </title>
                        <model>
                            <default_value><![CDATA[payment/method_checkmo]]></default_value>
                        </model>
                    </fields>
                </checkmo>
