<?$_order = $_invoice->getOrder()?>
<?=$this->getChildHtml('order_info')?>
<div class="box-left">
    <!--Billing Address-->
    <div class="entry-edit">
        <div class="entry-edit-head">
            <h4 class="icon-head head-payment-method"><?=$this->helper('sales')->__('Payment Information')?></h4>
        </div>
        <fieldset>
            <div><?=$this->getChildHtml('payment_info')?></div>
            <div><?=Mage::helper('sales')->__('Order was placed using %s', $_order->getOrderCurrencyCode())?></div>
        </fieldset>
    </div>
</div>
<div class="box-right">
    <!--Shipping Address-->
    <div class="entry-edit">
        <div class="entry-edit-head">
            <h4 class="icon-head head-shipping-method"><?=$this->helper('sales')->__('Shipping Information')?></h4>
        </div>
        <fieldset>
            <strong><?=$_order->getShippingDescription()?></strong>
            (<?=$this->helper('sales')->__('Total Shipping Charges %s', $this->displayPriceAttribute('shipping_amount', false, ' '))?>)
        </fieldset>
    </div>
</div>
<div class="clear"></div>

<div class="entry-edit">
    <div class="entry-edit-head">
        <h4 class="icon-head head-products"><?=$this->helper('sales')->__('Items Invoiced')?></h4>
    </div>
    <div id="invoice_item_container">
        <div class="grid">
            <table cellspacing="0" class="data" id="invoice_items_grid_table">
                <col/>
                <col width="100"/>
                <col width="70"/>
                <col width="90"/>
                <col width="90"/>
                <col width="100"/>
                <col width="100"/>
                <thead>
                    <tr class="headings">
                        <th><?=$this->helper('sales')->__('Product')?></th>
                        <th><?=$this->helper('sales')->__('Price')?></th>
                        <th><?=$this->helper('sales')->__('Qty')?></th>
                        <th><?=$this->helper('sales')->__('Subtotal')?></th>
                        <th><?=$this->helper('sales')->__('Tax Amount')?></th>
                        <th><?=$this->helper('sales')->__('Discount Amount')?></th>
                        <th class="last"><?=$this->helper('sales')->__('Row Total')?></th>
                    </tr>
                </thead>
                <tbody>
                    <?$_items = $this->getInvoice()->getAllItems()?>
                    <?$i=0;foreach ($_items as $_item):$i++?>
                    <?$this->setPriceDataObject($_item)?>
                        <tr class="<?=($i%2==0)?'even':'odd'?>">
                            <td>
                                <?=$_item->getName()?>
                                <div class="nobr"><strong><?=$this->helper('sales')->__('SKU')?>:</strong> <?=$_item->getSku()?></div>
                                <?=$_item->getDescription()?>
                            </td>
                            <td class="price"><?=$this->displayPriceAttribute('price')?></td>
                            <td><?=$_item->getQty()*1?></td>
                            <td class="price"><?=$this->displayPriceAttribute('row_total')?></td>
                            <td class="price"><?=$this->displayPriceAttribute('tax_amount')?></td>
                            <td class="price"><?=$this->displayPriceAttribute('discount_amount')?></td>
                            <td class="price last">
                                <?=$this->displayPrices(
                                    $_item->getBaseRowTotal()+$_item->getBaseTaxAmount()-$_item->getBaseDiscountAmount(),
                                    $_item->getRowTotal()+$_item->getTaxAmount()-$_item->getDiscountAmount()
                                )?>
                            </td>
                        </tr>
                    <?endforeach;?>
                </tbody>
            </table>
        </div>
    </div>
</div>
<br/>
<div class="box-left entry-edit">
    <div class="entry-edit-head"><h4><?=$this->__('Invoice History')?></h4></div>
