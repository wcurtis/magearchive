<div id="answers_container">
<?if( !$answers ):?>
<?else:?>
    <div class="entry-edit-head">
    <h4 class="icon-head head-edit-form fieldset-legend"><?=Mage::helper('poll')->__('Assigned Answers')?></h4>
    </div>
    <?foreach($answers->getItems() as $_item):?>
        <fieldset id="poll_answer_fieldset_<?=$_item->getId()?>">
        <table cellspacing="0" class="form-list" style="width:100%;">
            <tr>
                <td class="label"><?=Mage::helper('poll')->__('Answer Title:')?> <span class="required">*</span></td>
                <td class="value"><input id="answer_<?=$_item->getId()?>" name="answer[<?=$_item->getId()?>][title]" value="<?=$_item->getAnswerTitle()?>" class="required-entry input-text" type="text" /></td>
            </tr>
            <tr>
                <td class="label"><?=Mage::helper('poll')->__('Votes Count:')?> <span class="required">*</span></td>
                <td class="value"><?=$this->getDeleteButtonHtml()?>
                    <input id="answer_votes_<?=$_item->getId()?>" name="answer[<?=$_item->getId()?>][votes]" value="<?=$_item->getVotesCount()?>" class="required-entry validate-not-negative-number input-text" type="text" />
                </td>
             </tr>
        </table>
        <input type="hidden" id="id_poll_answer_fieldset_<?=$_item->getId()?>" value="<?=$_item->getId()?>" />
        </fieldset>
