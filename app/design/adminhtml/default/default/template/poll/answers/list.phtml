</div>
<?=$this->getAddButtonHtml();?>

<script type="text/javascript">
    var lastId = 0;
    var answer = function() {
        return {
            del : function(obj) {
                if( confirm('<?=Mage::helper('poll')->__('Are you sure you want to delete it?')?>') ) {
                    fieldSet = obj.up('fieldset');
                    if( $('id_' + fieldSet.id) ) {
                        var itemId = $('id_' + fieldSet.id).value;
                        var newElement = document.createElement('input');
                        newElement.type = 'hidden';
                        newElement.value = itemId;
                        newElement.name = 'deleteAnswer[]';
                        $('answers_container').appendChild(newElement);
                    }
                    fieldSet.remove();
                }
            },

            add : function(obj) {
                var newElement = document.createElement('div');
                newElement.innerHTML = this.getTemplate();
                $('answers_container').appendChild(newElement);
            },

            getTemplate : function() {
                var id = this.createId();
                return  '<fieldset id="poll_answer_fieldset_' + id + '">'
                       +'<table cellspacing="0" class="form-list" style="width:100%;">'
                       +'<tr>'
                       +    '<td class="label"><?=Mage::helper('poll')->__('Answer Title:')?> <span class="required">*</span></td>'
                       +    '<td><input id="answer_' + id + '" name="answer[' + id + '][title]" value="" class="required-entry input-text" type="text" /></td>'
                       +'</tr>'
                       +'<tr>'
                       +    '<td class="label"><?=Mage::helper('poll')->__('Votes Count:')?> <span class="required">*</span></td>'
                       +    '<td><?=$this->getDeleteButtonHtml()?><input id="answer_votes_' + id + '" name="answer[' + id + '][votes]" value="0" class="required-entry validate-not-negative-number input-text" type="text" /></td>'
                       +'</tr>'
                       +'</table>'
                       +'<input type="hidden" id="id_poll_answer_fieldset_' + id + '" value="' + id + '" />'
                       +'</fieldset>';
            },

            createId : function () {
                return --lastId;
            }
        }
    }();
</script>
