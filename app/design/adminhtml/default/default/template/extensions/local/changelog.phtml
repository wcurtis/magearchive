<div class="entry-edit">
    <?foreach ($this->getReleases() as $_log):?>
    <div class="entry-edit-head">
        <h4 class="icon-head head-edit-form fieldset-legend"><?=$_log['version']['release']?> (<?=$_log['stability']['release']?>)</h4>
    </div>
    <fieldset>
        <legend><?=$_log['version']['release']?> (<?=$_log['stability']['release']?>)</legend>

        <table class="" cellspacing="5">
            <tbody>
                <tr><th><?=$this->__("Date:")?></th><td><?=$_log['date']?></td></tr>
                <tr><th><?=$this->__("Version:")?></th><td><?=$_log['version']['release']?> (<?=$_log['stability']['release']?>)</td></tr>
                <tr><th><?=$this->__("API:")?></th><td><?=$_log['version']['api']?> (<?=$_log['stability']['api']?>)</td></tr>
                <tr><th><?=$this->__("License:")?></th><td>
                    <?if (is_array($_log['license'])):?>
                        <?if ($_uri = $_log['license']['attribs']['uri']):?>
                            <a href="<?=$_uri?>" target="_blank">
                        <?endif?>
                        <?=$_log['license']['_content']?>
                        <?if ($_uri):?>
                            </a>
                        <?endif?>
                    <?else:?>
                        <?=$_log['license']?>
                    <?endif?>
                </td></tr>
                <tr><th><?=$this->__("Notes:")?></th><td><?=nl2br($_log['notes'])?></td></tr>
            </tbody>
        </table>
    </fieldset>
    <?endforeach?>
</div>