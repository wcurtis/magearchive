?>
<?if($this->getCanDisplayWishlist()):?>
<div class="box base-mini mini-wishlist">
    <div class="head">
        <h4><?=$this->helper('wishlist')->__('My Wishlist - <a href="%s">%d Item(s)</a>', 
                $this->helper('wishlist')->getListUrl(), 
                $this->helper('wishlist')->getItemCount()
            )?></h4>
        <h5><?=$this->helper('wishlist')->__('Last Added Items')?></h5>
    </div>
    <?if($this->helper('wishlist')->getItemCount()>0):?>
    <ol id="wishlist-sidebar">
     <?foreach($this->getWishlistItems() as $_item):?>
        <li>
            <div class="product-images">
                <a href="<?=$_item->getProductUrl()?>">
                    <img src="<?=$_item->getThumbnailUrl()?>" alt="<?=$_item->getName()?>" width="50"/>
                </a>
            </div>
            <div class="product-details">
                <a href="<?=$this->helper('wishlist')->getRemoveUrl($_item)?>" onclick="return confirm('<?=$this->helper('wishlist')->__('Are You sure?')?>');" class="widget-btn">
                    <img src="<?=$this->getSkinUrl('images/list_remove_btn.gif')?>" alt="<?=$this->helper('wishlist')->__('Remove Item')?>"/>
                </a>
                <a href="<?=$_item->getProductUrl()?>"><?=$_item->getName()?></a>
                <?=$this->helper('catalog/product')->getPriceHtml($_item)?>
                <?if($_item->isSaleable()):?>
                <a href="<?=$this->helper('wishlist')->getAddToCartUrl($_item)?>" class="link-cart"><?=$this->__('Add to Cart')?></a>
                <?endif;?>
            </div>
        </li>
    <?endforeach;?>
    </ol>
    <script type="text/javascript">decorateList('wishlist-sidebar')</script>
    <?else:?>
    <div class="content"><p><?=$this->helper('wishlist')->__('You have no items in your wishlist.')?></p></div>
    <?endif?>
    <div class="actions"><a href="<?=$this->helper('wishlist')->getListUrl()?>"><?=$this->__('Go to Wishlist')?></a></div>
</div>
<?endif?>
<!-- [ends] .mini-wishlist // -->
