<?$_order=$this->getOrder()?>
<table cellspacing="0" cellpadding="0" border="0" width="100%" style="border:1px solid #bebcb7; background:#f8f7f5;">
    <thead>
        <tr>
            <th align="left" bgcolor="#d9e5ee" style="padding:3px 9px"><?=$this->__('Item')?></th>
            <th align="center" bgcolor="#d9e5ee" style="padding:3px 9px"><?=$this->__('Sku')?></th>
            <th align="center" bgcolor="#d9e5ee" style="padding:3px 9px"><?=$this->__('Qty')?></th>
            <th align="right" bgcolor="#d9e5ee" style="padding:3px 9px"><?=$this->__('Subtotal')?></th>
        </tr>
    </thead>
    <tbody>
    <?$i=0; foreach ($_order->getAllItems() as $_item): $i++?>
        <tr <?=$i%2?'bgcolor="#eeeded"':''?>>
            <td align="left" valign="top" style="padding:3px 9px">
                <?=$_item->getName()?>
                <?=$_item->getDescription()?>
            <?if($_item->getGiftMessageId() && $_giftMessage = $this->helper('giftmessage/message')->getGiftMessage($_item->getGiftMessageId())):?>
            <br/><strong><?=$this->__('Gift Message')?></strong>
            <br/><?=$this->__('From:');?> <?=$this->htmlEscape($_giftMessage->getSender())?>
            <br/><?=$this->__('To:');?> <?=$this->htmlEscape($_giftMessage->getRecipient())?>
            <br/><?=$this->__('Message:');?><br/> <?=$this->htmlEscape($_giftMessage->getMessage())?>
            <?endif;?>
            </td>
            <td align="center" valign="top" style="padding:3px 9px"><?=$_item->getSku()?></td>
            <td align="center" valign="top" style="padding:3px 9px"><?=$_item->getQtyOrdered()*1?></td>
            <td align="right" valign="top" style="padding:3px 9px"><?=$_order->formatPrice($_item->getRowTotal())?></td>
        </tr>
    <?endforeach?>
    </tbody>

    <tfoot>
        <?if($_order->getGiftMessageId() && $_giftMessage = $this->helper('giftmessage/message')->getGiftMessage($_order->getGiftMessageId())):?>
        <tr>
            <td colspan="4" align="left" style="padding:3px 9px">
            <strong><?=$this->__('Gift Message')?></strong>
            <br/><?=$this->__('From:');?> <?=$this->htmlEscape($_giftMessage->getSender())?>
            <br/><?=$this->__('To:');?> <?=$this->htmlEscape($_giftMessage->getRecipient())?>
            <br/><?=$this->__('Message:');?><br/> <?=$this->htmlEscape($_giftMessage->getMessage())?>
            </td>
        </tr>
        <?endif;?>
        <tr>
            <td colspan="3" align="right" style="padding:3px 9px"><?=$this->__('Subtotal')?></td>
            <td align="right" style="padding:3px 9px"><?=$_order->formatPrice($_order->getSubtotal())?></td>
        </tr>
        <?if ($_order->getDiscountAmount() > 0):?>
        <tr>
            <td colspan="3" align="right" style="padding:3px 9px"><?=$this->__('Discount '.($_order->getCouponCode()?'('.$_order->getCouponCode().')':''))?></td>
            <td align="right" style="padding:3px 9px"><?=$_order->formatPrice(0.00 - $_order->getDiscountAmount())?></td>
        </tr>
        <?endif;?>
        <?if ($_order->getShippingAmount() || $_order->getShippingDescription()):?>
        <tr>
            <td colspan="3" align="right" style="padding:3px 9px"><?=$this->__('Shipping & Handling')?></td>
            <td align="right" style="padding:3px 9px"><?=$_order->formatPrice($_order->getShippingAmount())?></td>
        </tr>
        <?endif;?>
        <?if ($_order->getTaxAmount() > 0):?>
        <tr>
            <td colspan="3" align="right" style="padding:3px 9px"><?=$this->__('Tax')?></td>
            <td align="right" style="padding:3px 9px"><?=$_order->formatPrice($_order->getTaxAmount())?></td>
        </tr>
        <?endif;?>
        <tr bgcolor="#DEE5E8">
            <td colspan="3" align="right" style="padding:3px 9px"><strong><big><?=$this->__('Grand Total')?></big></strong></td>
            <td align="right" style="padding:6px 9px"><strong><big><?=$_order->formatPrice($_order->getGrandTotal())?></big></strong></td>
        </tr>
    </tfoot>

</table>