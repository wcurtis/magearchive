/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?if($this->getItemCount()):?>
<div class="col-1 upsell">
    <h4><?=$this->__('Based on your selection, you may be interested in the following items:')?></h4>
    <ul class="generic-product-list">
    <?foreach ($this->getItems() as $_item):?>
        <li>
            <a href="<?=$_item->getProductUrl()?>"><img src="<?=$this->helper('catalog/image')->init($_item, 'thumbnail')->resize(75);?>" width="75" alt="<?=$this->htmlEscape($_item->getName())?>" class="product-image"/></a>
            <div class="product-shop">
                <h5><a href="<?=$_item->getProductUrl()?>"><?=$_item->getName()?></a></h5>
                <?=$this->helper('catalog/product')->getPriceHtml($_item)?>
                <button class="form-button" onclick="setLocation('<?=$this->getAddToCartUrl($_item)?>')" type="button"><span><?=$this->__('Add to Cart')?></span></button><br/>
                <?if ($this->helper('wishlist')->isAllow()) :?>
                <small><a href="<?=$this->getAddToWishlistUrl($_item)?>" class="link-cart"><?=$this->__('Add to Wishlist')?></a></small>
                <?endif;?>
            </div>
        </li>
    <?endforeach;?>
    </ul>
</div>
<?endif;?>
